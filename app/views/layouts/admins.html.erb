<!DOCTYPE html>
<html>
  <head>
    <title>Easyrent|Admins</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= vite_client_tag %>
    <%= vite_javascript_tag 'admins', "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <header class="navbar navbar-expand-lg bg-light sticky-top">
      <div class="container-fluid">
        <%= link_to "Easyrent", admins_root_path, class: "navbar-brand" %>
          <% if admin_signed_in? %>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-lg-flex align-item-center justify-content-between" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <%= link_to t(".cities"), admins_cities_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to t(".users"), admins_users_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to t(".catalogues"), admins_catalogues_path, class: "nav-link" %>
                </li>
              </ul>
              <%= link_to t(".sign_out"), destroy_admin_session_path, data: {turbo_method: :delete}, class: "btn btn-dark mr-4" %>
            </div>
        <% end %>
      </div>
    </header>
    <div class="container">
      <% if flash.any? %>
        <% flash.each do |key, msg| %>
          <%= tag.span(data: {notification: msg, kind: key}).html_safe %>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
