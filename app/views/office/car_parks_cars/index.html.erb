<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= t(".title") %>
  </h1>
  <div>
    <%= link_to office_root_path, class: "btn btn-outline-primary btn-sm" do %>
      <i class="bi bi-box-arrow-left"></i>
      <%= t(".back") %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="container p-3 rounded-3 bg-light my-3">
    <%= render "search_tab" %>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= t(".table.header.id")%></th>
        <th><%= t(".table.header.mark")%></th>
        <th><%= t(".table.header.plate_number")%></th>
        <th><%= t(".table.header.status")%></th>
        <th><%= t(".table.header.car_park")%></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "office/car_parks_cars/car", collection: @cars %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1%>
  </div>
</div>
