<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= t(".title") %>
  </h1>
  <div>
    <%= link_to office_root_path, class: "base-button base-button--info base-button--sm" do %>
      <%= t(".back") %>
    <% end %>
  </div>
</div>

<%= render "search_tab" %>

<div class="mt-4">
  <table class="table table-hover base-table">
    <thead class="table-light table-bordered">
      <tr>
        <th scope="col" class="text-center col-1"><%= t(".table.header.id")%></th>
        <th scope="col" class="text-center col-2"><%= t(".table.header.mark")%></th>
        <th scope="col" class="text-center col-2"><%= t(".table.header.plate_number")%></th>
        <th scope="col" class="text-center col-2"><%= t(".table.header.status")%></th>
        <th scope="col" class="text-center col-2"><%= t(".table.header.car_park")%></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "office/car_parks_cars/car", collection: @cars %>
    </tbody>
  </table>
</div>

<div class="d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1%>
</div>
