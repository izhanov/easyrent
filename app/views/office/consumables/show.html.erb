<h1>
  <%= @consumable.title %>
</h1>

<%# Table of replacement logs for this consumable %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Дата</th>
      <th>Пробег при замене</th>
      <th>Пробег до следующей замены</th>
      <th>Комментарий</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consumable.consumable_logs.each do |consumable_log| %>
      <tr>
        <td><%= consumable_log.date %></td>
        <td><%= consumable_log.mileage_when_replacing %></td>
        <td><%= consumable_log.mileage_at_next_replacing %></td>
        <td><%= consumable_log.description %></td>
        <td><%= link_to 'Show', "#" %></td>
        <td><%= link_to 'Edit', "#" %></td>
        <td><%= link_to 'Destroy', "#", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
