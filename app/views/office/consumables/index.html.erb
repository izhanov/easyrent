<div class="d-flex justify-content-between align-items-center">
  <h1>
    Расходные материалы
    <span class="text-secondary small fs-5 font-monospace"><%= @car.mark_title %></span>
    <span class="text-secondary small fs-5 font-monospace"><%= @car.plate_number %></span>
  </h1>
  <div>
    <%= link_to office_car_park_car_path(@car.owner, @car), class: "btn btn-sm btn-outline-primary" do %>
      <i class="bi bi-box-arrow-left"></i>
    <% end %>
    <%= link_to new_office_car_park_car_consumable_path(@car.owner, @car), class: "btn btn-sm btn-outline-primary", data: {turbo: true, turbo_frame: dom_id(Consumable.new)} do %>
      <i class="bi bi-journal-plus"></i>
      Добавить расходный материал
    <% end %>
  </div>
</div>


<div class="container">
  <%= turbo_frame_tag Consumable.new %>

  <%= turbo_frame_tag "consumables" do %>
      <%= render @consumables %>
  <% end %>
</div>


