<%= turbo_frame_tag "offers_to_select" do %>
  <%= turbo_stream_from "offers" %>

  <div class="row d-lg-flex justify-content-between align-items-center my-4">
    <% if offers.any? %>
      <div class="col-12 col-lg-6">
        <%= select_tag "booking[offer_id]", options_for_select(offers.map { |offer| [offer.title, offer.id] }), class: "form-select" %>
      </div>
    <% end %>
    <div class="col-12 col-lg-6">
      <%= link_to new_office_car_park_car_offer_path(@car_park, @car), class: "btn btn-sm btn-primary", data: {turbo: true, turbo_frame: dom_id(Offer.new)} do %>
        <i class="bi bi-plus"></i>
        <span>Добавить тариф</span>
      <% end %>
    </div>
  </div>
<% end %>
