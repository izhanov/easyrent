<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= t(".title") %>
    <%= @offer.title %>
    <span class="text-secondary small fs-5 font-monospace"><%= @car.mark_title %></span>
    <span class="text-secondary small fs-5 font-monospace"><%= @car.plate_number %></span>
  </h1>
  <div>
    <%= link_to office_car_park_car_offer_path(@car_park, @car, @offer), class: "btn btn-sm btn-outline-primary" do %>
      <i class="bi bi-box-arrow-left"></i>
      <%= t(".back") %>
    <% end %>
  </div>
</div>


<div class="container">
  <%= turbo_frame_tag @offer do %>
    <%= render "form", offer: @offer, car: @car, owner: @car.owner, turbo: false %>
  <% end %>
</div>
