<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= @offer.title %>
    <span class="text-secondary small fs-5 font-monospace"><%= @car.mark_title %></span>
    <span class="text-secondary small fs-5 font-monospace"><%= @car.plate_number %></span>
  </h1>
  <div>
    <%= link_to office_car_park_car_path(@car_park, @car), class: "btn btn-sm btn-outline-primary" do %>
      <i class="bi bi-box-arrow-left"></i>
      <%= t(".back") %>
    <% end %>
    <%= link_to edit_office_car_park_car_offer_path(@car_park, @car, @offer), class: "btn btn-sm btn-warning" do %>
      <i class="bi bi-pencil-square"></i>
      <%= t(".edit") %>
    <% end %>
    <%= link_to office_car_park_car_offer_path(@car_park, @car, @offer), class: "btn btn-sm btn-danger", data: {turbo_confirm: t(".sure?"), turbo_method: :delete} do %>
      <i class="bi bi-trash"></i>
      <%= t(".destroy") %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="card">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <strong><%= t(".title") %></strong>
        <%= @offer.title %>
      </li>
    </ul>
    <div class="card-body">
      <div class="card-title">
        <strong><%= t(".prices") %></strong>
      </div>
      <div class="card-text">
        <ul class="list-group list-group-flush">
          <% @offer.prices.each do |(range, price)| %>
            <li class="list-group-item">
              <%= t(".rental_days_range", range: range, price: price) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="card-body">
      <div class="card-title">
        <strong><%= t(".mileage_limit", limit: @car_park.mileage_limits.find(@offer.mileage_limit_id).value) %></strong>
      </div>
    </div>
  </div>
</div>
