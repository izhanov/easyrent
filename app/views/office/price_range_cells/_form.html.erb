<%= turbo_frame_tag price_range_cell do %>
  <%= form_with model: [:office, current_office_user, @car_park, price_range, price_range_cell], html: {data: {turbo: true, turbo_frame: price_range_cell}} do  |f| %>
    <%= f.hidden_field :price_range_id, value: price_range.id %>

    <div class="input-group mt-3">
      <%= f.label :from, class: "input-group-text" %>
      <%= f.text_field :from, class: "form-control" %>
      <%= f.label :to, class: "input-group-text" %>
      <%= f.text_field :to, class: "form-control" %>
      <div class="ms-3">
        <% if price_range_cell.persisted? %>
          <%= link_to office_user_car_park_price_range_price_range_cell_path(current_office_user, @car_park, price_range, price_range_cell), class: "btn btn-danger", data: {turbo: true, turbo_method: :delete} do %>
            <i class="bi bi-trash"></i>
          <% end %>
        <% else %>
          <%= link_to office_user_car_park_price_range_path(current_office_user, @car_park, price_range), class: "btn btn-secondary" do %>
            <i class="bi bi-x"></i>
          <% end %>
        <% end %>

        <%= f.button nil, class: "btn btn-success" do %>
          <i class="bi bi-check"></i>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
