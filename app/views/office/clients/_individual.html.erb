<div class="row">
  <div class="col">
    <div class="form-check">
      <%= f.label :citizen %>
      <%= f.check_box :citizen, class: "form-check-input", data: {action: "clients-form#changeResidence", "clients-form-target": "citizen"} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12 col-lg-4">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <%= error_field(@errors, :name) %>
  </div>
  <div class="col-12 col-lg-4">
    <%= f.label :surname %>
    <%= f.text_field :surname, class: "form-control" %>
    <%= error_field(@errors, :surname) %>
  </div>
  <div class="col-12 col-lg-4">
    <%= f.label :patronymic %>
    <%= f.text_field :patronymic, class: "form-control" %>
    <%= error_field(@errors, :patronymic) %>
  </div>
</div>

<div class="row">
  <div class="col-12 col-lg-4" data-clients-form-target="identificationNumber">
