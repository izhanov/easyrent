  <%= error_field(@errors, :patronymic) %>
</div>

<div class="base-input m-3" data-clients-form-target="identificationNumber">
  <%= f.label :identification_number %>
  <%= f.text_field :identification_number, class: "form-control" %>
  <%= error_field(@errors, :identification_number) %>
</div>

<div class="base-input m-3" data-clients-form-target="passportNumber">
