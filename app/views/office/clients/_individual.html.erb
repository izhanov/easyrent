  </div>

  <div class="col-12 col-lg-4" data-clients-form-target="passportNumber">
    <%= f.label :passport_number %>
    <%= f.text_field :passport_number, class: "form-control" %>
    <%= error_field(@errors, :passport_number) %>
  </div>

  <div class="col-12 col-lg-4">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control" %>
    <%= error_field(@errors, :phone) %>
  </div>

  <div class="col-12 col-lg-4">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
    <%= error_field(@errors, :email) %>
