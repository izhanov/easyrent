<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= @car.mark_title %>
    <span class="text-secondary small fs-5 font-monospace"><%= @car.plate_number %></span>
  </h1>
  <div>
    <%= link_to office_car_park_path(@car_park), class: "btn btn-sm btn-outline-primary" do %>
      <i class="bi bi-box-arrow-left"></i>
      <%= t(".back") %>
    <% end %>
    <%= link_to edit_office_car_park_car_path(@car_park, @car), class: "btn btn-sm btn-warning" do %>
      <i class="bi bi-pencil-square"></i>
      <%= t(".edit") %>
    <% end %>
    <%= link_to office_car_park_car_path(@car_park, @car), class: "btn btn-sm btn-danger", data: {turbo_confirm: t(".sure?"), turbo_method: :delete} do %>
      <i class="bi bi-trash"></i>
      <%= t(".destroy") %>
    <% end %>
  </div>
</div>

<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= active_link_to t(".offers"), office_car_park_car_path(@car_park, @car), class: "nav-link link-dark", active: %r{(office/car_parks/#{@car_park.id}|office/car_parks/#{@car_park.id}?page=)} %>
    </li>
    <li class="nav-item">
      <%= active_link_to t(".photos"), settings_office_car_park_path(@car_park), class: "nav-link link-dark", active: :exact %>
    </li>
    <li class="nav-item">
      <%= active_link_to t(".car_insurances"), settings_office_car_park_path(@car_park), class: "nav-link link-dark", active: :exact %>
    </li>
    <li class="nav-item">
      <%= active_link_to t(".car_inspections"), settings_office_car_park_path(@car_park), class: "nav-link link-dark", active: :exact %>
    </li>
    <li class="nav-item">
      <%= active_link_to t(".consumables"), settings_office_car_park_path(@car_park), class: "nav-link link-dark", active: :exact %>
    </li>
  </ul>

  <div class="container">
    <div class="d-flex justify-content-end my-2">
      <%= link_to new_office_car_park_car_offer_path(@car_park, @car), class: "btn btn-primary btn-sm", data: {turbo: true, turbo_frame: dom_id(Offer.new)} do %>
        <i class="bi bi-plus"></i>
        <%= t(".new_offer") %>
      <% end %>
    </div>


    <%= turbo_frame_tag Offer.new %>

    <div class="d-flex my-2">
      <div class="col-12">
        <%= turbo_frame_tag "offers", class: "list-group list-group-numbered" do %>
          <%= render @car.offers %>
        <% end %>
      </div>
    </div>
  </div>
</div>
