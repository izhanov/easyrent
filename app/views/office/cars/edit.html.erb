<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= @car.mark_title %>
    <span class="text-secondary small fs-5 font-monospace"><%= @car.plate_number %></span>
  </h1>
  <div>
    <%= link_to office_user_car_park_car_path(current_office_user, @car.ownerable, @car), class: "btn btn-sm btn-outline-primary" do %>
      <i class="bi bi-box-arrow-left"></i>
    <% end %>
  </div>
</div>


<div class="mb-4">
  <%= link_to new_office_user_car_park_car_offer_path(current_office_user, @car_park, @car), class: "btn btn-sm btn-warning", data: {turbo: true, turbo_frame: dom_id(Offer.new)}  do %>
    <i class="bi bi-bar-chart-steps"></i>
    <%= t(".offers") %>
  <% end %>
</div>

<%= turbo_frame_tag Offer.new %>
