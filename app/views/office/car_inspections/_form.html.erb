<%= form_with model: [:office, owner, car, car_inspection], html: {data: {}} do |f| %>
  <%= f.hidden_field :car_id, value: car.id %>

  <div class="m-2">
    <div class="base-input">
      <%= f.label :start_at %>
      <%= f.date_field :start_at %>
      <%= error_field(@errors, :start_at) %>
    </div>
  </div>

  <div class="m-2">
    <div class="base-input">
      <%= f.label :end_at %>
      <%= f.date_field :end_at %>
      <%= error_field(@errors, :end_at) %>
    </div>
  </div>

  <div class="mt-2">
    <%= f.button nil, class: "base-button base-button--green base-button--sm" do %>
      <%= t(".submit") %>
    <% end %>

    <%= link_to office_car_park_car_car_inspections_path(owner, car), class: "base-button base-button--grey base-button--sm" do %>
      <i class="bi bi-x-lg"></i>
      <%= t(".cancel") %>
    <% end %>
  </div>
<% end %>
