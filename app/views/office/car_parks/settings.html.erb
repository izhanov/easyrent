<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= @car_park.title %>
    <span class="text-secondary small fs-5"><%= t(".title") %></span>
  </h1>
  <div>
    <%= link_to office_car_parks_path, class: "btn btn-sm btn-outline-primary" do %>
      <i class="bi bi-box-arrow-left"></i>
      <%= t(".back") %>
    <% end %>
    <%= link_to edit_office_car_park_path(@car_park), class: "btn btn-sm btn-warning" do %>
      <i class="bi bi-pencil-square"></i>
      <%= t(".edit") %>
    <% end %>
    <%= link_to office_car_park_path(@car_park), class: "btn btn-sm btn-danger", data: {turbo_confirm: t(".sure?"), turbo_method: :delete} do %>
      <i class="bi bi-trash"></i>
      <%= t(".destroy") %>
    <% end %>
  </div>
</div>


<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= active_link_to t(".cars"), office_car_park_path(@car_park), class: "nav-link link-dark", active: %r{(office/car_parks/#{@car_park.id}|office/car_parks/#{@car_park.id}?page=[0-9]{1,})$} %>
    </li>
    <li class="nav-item">
      <%= active_link_to t(".title"), settings_office_car_park_path(@car_park), class: "nav-link link-dark", active: :exact %>
    </li>
  </ul>

  <div class="accordion my-2" id="accordionPanelsStayOpenExample">
    <div class="accordion-item">
      <h2 class="accordion-header" id="panelsStayOpen-headingOne">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
          <%= t(".rental_days_range") %>
        </button>
      </h2>
      <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
        <div class="accordion-body">
          <%= raw t(".rental_days_range_description") %>
          <%= link_to t(".configure"), office_car_park_price_range_path(@car_park, @car_park.price_range), class: "link-underline link" %>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="true" aria-controls="panelsStayOpen-collapseTwo">
          <%= t(".rental_rules") %>
        </button>
      </h2>
      <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">
        <div class="accordion-body">
          <%= raw t(".rental_rules_description") %>
          <%= link_to t(".configure"), office_car_park_rental_rule_root_path(@car_park), class: "link-underline link"%>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header" id="panelsStayOpen-headingThree">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="true" aria-controls="panelsStayOpen-collapseThree">
          <%= t(".additional_services") %>
        </button>
      </h2>
      <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingThree">
        <div class="accordion-body">
          <%= raw t(".additional_services_description") %>
          <%= link_to t(".configure"), office_car_park_additional_services_path(@car_park), class: "link-underline link"%>
        </div>
      </div>
    </div>
  </div>
</div>
