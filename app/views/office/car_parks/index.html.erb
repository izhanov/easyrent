<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= t(".title") %>
    <span class="text-secondary small fs-5"><%= current_office_user.full_name %></span>
  </h1>
  <div>
    <%= link_to new_office_car_park_path, class: "btn btn-primary btn-sm" do %>
      <i class="bi bi-building-add"></i>
      <%= t(".new_car_park") %>
    <% end %>
    <%= link_to office_root_path, class: "btn btn-outline-primary btn-sm" do %>
      <i class="bi bi-box-arrow-left"></i>
    <% end %>
  </div>
</div>

<div class="container">
  <% if @car_parks.any?%>
    <%= render @car_parks %>
  <% else %>
    <p><%= t(".no_car_parks") %></p>
  <% end %>
</div>
