<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= current_office_user.full_name %>
    <span class="text-secondary small fs-5"><%= t(".title") %></span>
  </h1>
  <div>
  </div>
</div>

<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= active_link_to t(".car_parks"), office_car_parks_path, class: "nav-link link-dark", active: %r{(/office|/office/car_parks)$} %>
    </li>
    <li class="nav-item">
      <%= active_link_to t(".edit"), edit_office_user_path(current_office_user), class: "nav-link link-dark", active: :exact %>
    </li>
  </ul>

  <div class="container">
    <div class="d-flex justify-content-end my-2">
      <%= link_to new_office_car_park_path, class: "btn btn-primary btn-sm", data: {turbo: true, turbo_frame: dom_id(CarPark.new)} do %>
        <i class="bi bi-building-add"></i>
        <%= t(".new_car_park") %>
      <% end %>
    </div>


    <%= turbo_frame_tag CarPark.new %>

    <div class="d-flex my-2">
      <div class="col-12">
        <%= turbo_frame_tag "car_parks", class: "list-group list-group-numbered" do %>
          <%= render @car_parks %>
        <% end %>
      </div>
    </div>
  </div>
</div>
