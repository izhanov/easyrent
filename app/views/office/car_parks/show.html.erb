<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= @car_park.title %>
    <span class="text-secondary small fs-5"><%= t(".title") %></span>
  </h1>
  <div>
    <%= link_to office_car_parks_path, class: "btn btn-sm btn-outline-primary" do %>
      <i class="bi bi-box-arrow-left"></i>
      <%= t(".back") %>
    <% end %>
    <%= link_to edit_office_car_park_path(@car_park), class: "btn btn-sm btn-warning" do %>
      <i class="bi bi-pencil-square"></i>
      <%= t(".edit") %>
    <% end %>
    <%= link_to office_car_park_path(@car_park), class: "btn btn-sm btn-danger", data: {turbo_confirm: t(".sure?"), turbo_method: :delete} do %>
      <i class="bi bi-trash"></i>
      <%= t(".destroy") %>
    <% end %>
  </div>
</div>


<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= active_link_to t(".cars"), office_car_park_path(@car_park), class: "nav-link link-dark", active: %r{(office/car_parks/#{@car_park.id}|office/car_parks/#{@car_park.id}?page=)} %>
    </li>
    <li class="nav-item">
      <%= active_link_to t(".settings"), settings_office_car_park_path(@car_park), class: "nav-link link-dark", active: :exact %>
    </li>
  </ul>

  <div class="d-flex justify-content-end my-2">
    <%= link_to new_office_car_park_car_path(@car_park), class: "btn btn-primary btn-sm", data: {turbo: true, turbo_frame: dom_id(CarPark.new)} do %>
      <i class="bi bi-building-add"></i>
      <%= t(".add_car") %>
    <% end %>
  </div>

  <% if @car_park.cars.any? %>
    <%= render "table", cars: @cars %>
  <% else %>
    <div class="alert alert-warning">
      <%= t(".no_cars") %>
    </div>
  <% end %>
</div>

