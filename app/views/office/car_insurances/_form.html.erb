<%= form_with model: [:office, owner, car, car_insurance], html: {data: {}} do |f| %>
  <%= f.hidden_field :car_id, value: car.id %>

  <div class="base-input">
    <%= f.label :kind %>
    <%= f.select :kind, CarInsurance::KINDS.map { |kind| [localize_car_insurance_kind(kind), kind] }, {include_blank: false} %>
  </div>
  <div class="mt-2">
    <div class="base-input">
      <%= f.label :start_at %>
      <%= f.date_field :start_at %>
      <%= error_field(@errors, :start_at) %>
    </div>
  </div>

  <div class="mt-2">
    <div class="base-input">
      <%= f.label :end_at %>
      <%= f.date_field :end_at %>
      <%= error_field(@errors, :end_at) %>
    </div>
  </div>

  <div class="mt-2">
    <%= f.button nil, class: "base-button base-button--green base-button--sm" do %>
      <%= t(".submit") %>
    <% end %>
    <%= link_to office_car_park_car_car_insurances_path(owner, car), class: "base-button base-button--grey base-button--sm" do %>
      <%= t(".cancel") %>
    <% end %>
  </div>
<% end %>
