<%= form_with model: [:office, @car_park, mileage_limit] do |f| %>
  <%= f.hidden_field :owner_id, value: @car_park.id %>
  <%= f.hidden_field :owner_type, value: @car_park.class.name %>

  <div class="row">
    <div class="row mb-3">
      <div class="col">
        <div class="input-group">
          <%= f.label :title, class: "input-group-text" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="col">
        <div class="input-group">
          <%= f.label :value, class: "input-group-text" %>
          <%= f.number_field :value, class: "form-control" %>
        </div>
      </div>
      <div class="col">
        <div class="input-group">
          <%= f.label :over_mileage_price, class: "input-group-text" %>
          <%= f.number_field :over_mileage_price, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col">
        <div class="input-group">
          <%= f.label :markup, class: "input-group-text" %>
          <%= f.number_field :markup, class: "form-control" %>
        </div>
      </div>

      <div class="col">
        <div class="input-group">
          <%= f.label :discount, class: "input-group-text" %>
          <%= f.number_field :discount, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= link_to office_car_park_rental_rule_root_path(@car_park), class: "btn btn-secondary btn-sm" do %>
          <i class="bi bi-x"></i>
        <% end %>
        <%= f.button nil, class: "btn btn-success btn-sm" do %>
          <i class="bi bi-check"></i>
        <% end %>
      </div>
    </div>
  </div>

<% end %>
