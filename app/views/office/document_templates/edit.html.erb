<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= t(".title") %>
  </h1>

  <div>
    <%= link_to office_document_templates_path, class: "btn btn-primary btn-sm" do %>
      <i class="bi bi-arrow-left"></i>
      <%= t(".back") %>
    <% end %>

    <%= link_to download_office_document_template_path(@document_template), class: "btn btn-outline-primary btn-sm" do %>
      <i class="bi bi-download"></i>
      <%= t(".download") %>
    <% end %>
  </div>
</div>


<div class="container">
  <%= render "form", document_template: @document_template %>
</div>
