<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= @car.mark_title %>
    <span class="text-secondary small fs-5 font-monospace"><%= @car.plate_number %></span>
  </h1>
  <div>
    <%= link_to office_car_park_car_path(@car_park, @car), class: "base-button base-button--info base-button--sm" do %>
      <%= t(".back") %>
    <% end %>
  </div>
</div>

<div class="container car-page-layout">
  <div class="car-photo__content mt-4">
    <div class="car-photo-slider">
      <div class="swiper">
        <div class="swiper-wrapper">
          <% @car.photos.each do |photo| %>
            <div class="swiper-slide car-photo-slider__slide">
              <%= image_tag photo.image.url %>
            </div>
          <% end %>
        </div>
      </div>
      <button class="car-photo-slider__prev">
        <%= vite_image_tag("images/office/slider-arrow.svg") %>
      </button>
      <button class="car-photo-slider__next">
        <%= vite_image_tag("images/office/slider-arrow.svg") %>
      </button>
    </div>
  </div>
  <%= render "office/cars/sidebar", car_park: @car_park, car: @car %>
</div>
