<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= @car.mark_title %>
    <span class="text-secondary small fs-5 font-monospace"><%= @car.plate_number %></span>
  </h1>
  <%= render(
    partial: "office/shared/actions/cars/buttons",
    locals: {
      back_button_url: office_car_park_path(@car_park)
    }
  )%>
</div>

<div class="container">
  <%= render "office/shared/tabs/cars/nav_tabs" %>

  <div class="d-flex justify-content-end my-2">
    <%= link_to "#", class: "btn btn-primary btn-sm", data: {turbo: true, turbo_frame: dom_id(Offer.new)} do %>
      <i class="bi bi-plus"></i>
      <%= t(".add_photo") %>
    <% end %>
  </div>

  <div class="d-flex justify-content-center my-3">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
      <div class="carousel-indicators">
        <% @car.photos.size.times do |index| %>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= index %>" class="<%= "active" if index.zero? %>" aria-current="<%= index.zero? %>"></button>
        <% end %>
      </div>
      <div class="carousel-inner">
        <% @car.photos.each do |photo| %>
          <div class="carousel-item <%= "active" if photo == @car.photos.first %>">
            <%= image_tag photo.image_url(:medium), class: "d-block rounded-2" %>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>
