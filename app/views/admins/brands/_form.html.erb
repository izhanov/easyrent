<%= form_with model: [:admins, brand], html: {data: {turbo: false}} do |f| %>
  <div class="col-4 m-4">
    <div class="input-group">
      <%= f.label :title, class: "input-group-text" %>
      <%= f.text_field :title, class: "form-control"%>
      <%= error_field(@errors, :title) %>
    </div>
  </div>

  <div class="col-4 m-4">
    <div class="input-group">
      <%= f.label :synonyms, class: "input-group-text"%>
      <%= f.text_area "synonyms][", { class: "form-control", id: "brand_synonyms", value: f.object.synonyms.join(", ") }%>
      <%= error_field(@errors, :synonyms) %>
    </div>
  </div>

  <div class="col-4 m-4">
    <%= f.submit t(".save"), class: "btn btn-success" %>
  </div>
<% end %>
