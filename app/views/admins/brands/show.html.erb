<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= @brand.title %>
  </h1>
  <div>
    <%= link_to admins_brands_path, class: "btn btn-sm btn-primary" do %>
      <i class="bi bi-box-arrow-left"></i>
    <% end %>
    <%= link_to edit_admins_brand_path(@brand), class: "btn btn-sm btn-warning" do %>
      <i class="bi bi-pencil-square"></i>
    <% end %>
    <%= link_to admins_brand_path(@brand), class: "btn btn-sm btn-danger", data: {turbo_confirm: t(".sure?"), turbo_method: :delete} do %>
      <i class="bi bi-trash"></i>
    <% end %>
  </div>
</div>

<div class="container">
  <ul class="list-unstyled">
    <% @brand.synonyms.each do |synonym| %>
      <li>
        <%= synonym %>
      </li>
    <% end %>
  </ul>
</div>
