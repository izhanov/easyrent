<div class="d-flex justify-content-between align-items-center">
  <h1><%= t(".title") %></h1>
  <div>
    <%= link_to admins_catalogues_path, class: "btn btn-sm btn-primary" do %>
      <i class="bi bi-box-arrow-left"></i>
    <% end %>
    <%= link_to new_admins_brand_path, class: "btn btn-sm btn-primary" do %>
      <i class="bi bi-plus"></i>
    <% end %>
  </div>
</div>

<div class="container">
  <% if @brands.any?%>
    <%= render @brands %>
  <% else %>
    <p><%= t(".no_brands") %></p>
  <% end %>
</div>
