<%= form_with model: [:admins, city], html: {class: "mt-4 row align-items-center"} do |f| %>
  <div class="col-lg-4 mb-4 mb-lg-5">
    <div class="input-group">
      <%= f.label :title, class: "input-group-text" %>
      <%= f.text_field :title, class: "form-control"%>
      <%= error_field(@errors, :title) %>
    </div>
  </div>

  <div class="col-lg-4 mb-4 mb-lg-5">
    <div class="input-group">
      <%= f.label :slug, class: "input-group-text" %>
      <%= f.text_field :slug, class: "form-control" %>
      <%= error_field(@errors, :slug) %>
    </div>
  </div>

  <div class="col-lg-4 mb-4 mb-lg-5">
    <%= f.submit t(".save"), class: "btn btn-success" %>
  </div>
<% end %>
