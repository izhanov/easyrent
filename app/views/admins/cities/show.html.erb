<div class="d-flex justify-content-between align-items-center">
  <h1>
    <%= @city.title %>
    <small class="text-muted"><%= @city.slug %></small>
  </h1>
  <div>
    <%= link_to admins_cities_path, class: "btn btn-sm btn-primary", id: "cities-back-link" do %>
      <i class="bi bi-box-arrow-left"></i>
    <% end %>
    <%= link_to edit_admins_city_path(@city), class: "btn btn-sm btn-warning" do %>
      <i class="bi bi-building-fill-gear"></i>
    <% end %>
    <%= link_to admins_city_path(@city), class: "btn btn-sm btn-danger", data: {turbo_confirm: t(".sure?"), turbo_method: :delete} do %>
      <i class="bi bi-building-fill-x"></i>
    <% end %>
  </div>
</div>
