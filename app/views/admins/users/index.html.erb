<div class="d-flex justify-content-between align-items-center">
  <h1><%= t(".title") %></h1>
  <div>
    <%= link_to t(".invite_user"), new_admins_user_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container">
  <% if @users.any?%>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th><%= t(".table.header.id")%></th>
                <th><%= t(".table.header.email")%></th>
                <th><%= t(".table.header.phone")%></th>
                <th><%= t(".table.header.kind")%></th>
              </tr>
            </thead>
            <tbody>
              <%= render @users %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <p><%= t(".no_users") %></p>
  <% end %>
</div>
